<odoo>

    <record id="purchase_subscription_view_search" model="ir.ui.view">
        <field name="name">purchase.subscription.view.search</field>
        <field name="model">purchase.subscription</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Contract" />
                <field name="date" />
                <field name="partner_id" operator="child_of" />
                <field name="user_id" />
                <field name="code" />
                <filter
                    name="new"
                    string="New"
                    domain="[('state','=','draft')]"
                    help="New Contracts"
                />
                <filter
                    name="open"
                    string="In Progress"
                    domain="[('state','=','open')]"
                    help="Contracts in progress"
                />
                <filter
                    name="pending"
                    string="To Renew"
                    domain="[('state','=','pending')]"
                    help="Pending contracts"
                />
                <filter
                    name="closed"
                    string="Closed"
                    domain="[('state','=','close')]"
                    help="Closed contracts"
                />
                <filter
                    name="cancelled"
                    string="Cancelled"
                    domain="[('state','=','cancel')]"
                    help="Cancelled contracts"
                />
                <separator />
                <filter
                    name="expired"
                    string="Expired"
                    domain="[('state','in',('open','draft','pending')), '|', ('date', '!=', False), ('date', '&lt;=', time.strftime('%%Y-%%m-%%d'))]"
                    help="End date passed"
                />
                <filter
                    name="expired_soon"
                    string="Expiring soon"
                    domain="[('date', '!=', False), ('date', '&lt;=', (context_today() + datetime.timedelta(30)).strftime('%%Y-%%m-%%d') )]"
                    help="End date is in the next month"
                />
                <separator />
                <filter
                    name="contracts_not_assigned"
                    string="Contracts not assigned"
                    help="Contracts that are not assigned to an account manager."
                    domain="[('user_id', '=', False)]"
                />
                <separator />
                <group expand="0" string="Group By">
                    <filter
                        name="status"
                        string="Status"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                    <filter
                        name="account_manager"
                        string="Account Manager"
                        domain="[]"
                        context="{'group_by':'user_id'}"
                    />
                    <filter
                        name="partner"
                        string="Partner"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        name="start_month"
                        string="Start Month"
                        domain="[]"
                        context="{'group_by' : 'date_start'}"
                    />
                    <filter
                        name="end_month"
                        string="End Month"
                        domain="[]"
                        context="{'group_by' : 'date'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="purchase_subscription_action" model="ir.actions.act_window">
        <field name="name">Purchase Subscriptions</field>
        <field name="res_model">purchase.subscription</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="context">{'default_user_id':uid}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Click to create a new contract.
            </p>
            <p>
                Use contracts to follow tasks, issues, timesheets or invoicing based on
                work done, expenses and/or purchase orders. Odoo will automatically manage
                the alerts for the renewal of the contracts to the right salesperson.
            </p>
        </field>
    </record>

    <record id="purchase_subscription_action_pending" model="ir.actions.act_window">
        <field name="name">Subscriptions to Renew</field>
        <field name="res_model">purchase.subscription</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field
            name="context"
        >{'search_default_user_id':uid, 'search_default_pending':1, 'search_default_renew':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Click to define a new contract.
            </p>
            <p>
                You will find here the contracts to be renewed because the
                end date is passed or the working effort is higher than the
                maximum authorized one.
            </p>
            <p>
                Odoo automatically sets contracts to be renewed in a pending
                state. After the negociation, the salesman should close or renew
                pending contracts.
            </p>
        </field>
    </record>

    <record id="purchase_subscription_view_graph" model="ir.ui.view">
        <field name="name">purchase.subscription.view.graph</field>
        <field name="model">purchase.subscription</field>
        <field name="arch" type="xml">
            <graph>
                <field name="partner_id" />
                <field name="recurring_total" type="measure" />
            </graph>
        </field>
    </record>

    <record id="purchase_subscription_view_pivot" model="ir.ui.view">
        <field name="name">purchase.subscription.view.pivot</field>
        <field name="model">purchase.subscription</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="partner_id" />
                <field name="recurring_total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="purchase_subscription_view_form" model="ir.ui.view">
        <field name="name">purchase.subscription.view.form</field>
        <field name="model">purchase.subscription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        string="Start Subscription"
                        name="set_open"
                        type="object"
                        attrs="{'invisible': [('state','=','open')]}"
                        class="oe_highlight"
                    />
                    <button
                        string="To Renew"
                        name="set_pending"
                        type="object"
                        attrs="{'invisible': [('state','in',['pending','draft','close','cancel'])]}"
                    />
                    <button
                        string="Close Subscription"
                        name="set_close"
                        type="object"
                        attrs="{'invisible': [('state','in',['draft','close','cancel'])]}"
                    />
                    <button
                        string="Cancel Subscription"
                        name="set_cancel"
                        type="object"
                        attrs="{'invisible': [('state','in',['cancel','close'])]}"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet string="Subscription">
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            icon="fa-book"
                            name="action_subscription_invoice"
                            type="object"
                        >
                            <field
                                name="invoice_count"
                                widget="statinfo"
                                string="Invoices"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" />
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field
                                name="partner_id"
                                required="1"
                                context="{'default_is_company': True, 'default_supplier_rank': 1}"
                            />
                            <field name="code" />
                            <field name="recurring_rule_type" />
                            <field name="recurring_interval" />
                            <label
                                for="recurring_next_date"
                                string="Date of Next Invoice"
                            />
                            <div>
                                <field name="recurring_next_date" />
                                <button
                                    string="&#8658; Generate Invoice"
                                    class="oe_link"
                                    name="recurring_invoice"
                                    type="object"
                                />
                            </div>
                            <field name="attachment" filename="filename" />
                            <field name="filename" invisible="1" />
                        </group>
                        <group>
                            <label for="user_id" string="Purchase Rep" />
                            <field name="user_id" nolabel="1" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="currency_id" required="1" />
                            <field name="payment_term_id" />
                            <field name="date_start" />
                            <field name="date" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Subscription Lines" id="lines">
                            <div>
                                <field name="recurring_invoice_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name="analytic_account_id" />
                                        <field
                                            name="quantity"
                                            readonly="1"
                                            groups="base.group_no_one"
                                        />
                                        <field name="actual_quantity" />
                                        <field name="buy_quantity" />
                                        <field name="uom_id" />
                                        <field name="price_unit" />
                                        <field
                                            name="discount"
                                            groups="product.group_discount_per_so_line"
                                        />
                                        <field
                                            name="taxes_id"
                                            widget="many2many_tags"
                                            domain="[('type_tax_use','=','purchase')]"
                                            context="{'default_type_tax_use': 'purchase', 'search_view_ref': 'account.account_tax_view_search'}"
                                            options="{'no_create': True}"
                                        />
                                        <field name="price_subtotal" />
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field
                                        name="recurring_total"
                                        class="oe_subtotal_footer_separator"
                                        widget="monetary"
                                        options="{'currency_field': 'currency_id'}"
                                        modifiers="{'readonly': true}"
                                    />
                                </group>
                            </div>
                        </page>
                    </notebook>
                    <div>
                        <field name="description" />
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="purchase_subscription_view_tree" model="ir.ui.view">
        <field name="name">purchase.subscription.view.tree</field>
        <field name="model">purchase.subscription</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="arch" type="xml">
            <tree
                decoration-info="state=='draft'"
                decoration-danger="state=='pending'"
                decoration-muted="state in ('cancel','close')"
                sample="1"
            >
                <field name="code" />
                <field name="partner_id" />
                <field name="recurring_next_date" />
                <field name="user_id" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="recurring_total" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Menuitems -->
    <menuitem
        id="menu_purchase_subscription_root"
        name="Purchase Subscriptions"
        sequence="9"
        web_icon="purchase_subscription,static/description/icon.png"
        groups="account.group_account_user"
    />

    <menuitem
        id="menu_purchase_subscription"
        name="Purchases Subscriptions"
        sequence="5"
        parent="menu_purchase_subscription_root"
    />

    <menuitem
        id="menu_purchase_subscription_action"
        action="purchase_subscription_action"
        sequence="1"
        parent="menu_purchase_subscription"
    />

    <menuitem
        id="menu_purchase_subscription_pending"
        action="purchase_subscription_action_pending"
        sequence="2"
        parent="menu_purchase_subscription"
    />

    <menuitem
        id="menu_purchase_subscription_product"
        action="product_template_action_purchase_subscription"
        sequence="3"
        parent="menu_purchase_subscription"
    />

</odoo>
